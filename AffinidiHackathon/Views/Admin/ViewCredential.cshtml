@model AffinidiHackathon.Models.ViewCredentialAdminViewModel

@{
    ViewBag.Title = "ViewCredential";
}

<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-lg-3 text-center text-lg-start">
            <h3 class="display-4 fw-bold lh-1 mb-3">View Credentials for @Model.User</h3> <br />
        </div>
        <div class="col-10 mx-auto col-lg-8">
            <br />
            <br />
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Creation Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var credential in Model.Credentials)
                    {
                        <tr>
                            <td>@credential.unsignedCredential.id</td>
                            <td>@credential.unsignedCredential.issuanceDate</td>
                            <td>@Html.ActionLink("View details", "ViewDetails", new { user = Model.User, id = credential.unsignedCredential.id.Replace("claimId:", "") })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>